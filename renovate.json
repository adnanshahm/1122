{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
      "config:recommended"
  ],
  "enabledManagers": ["npm","gomod", "dockerfile"],
  "branchConcurrentLimit": 0,
  "commitMessageExtra": "from {{#if isPinDigest}}{{currentDigestShort}}{{else}}{{currentVersion}}{{/if}} to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "branchPrefix": "feature/",
  "prHourlyLimit": 5,
  "baseBranches": ["master"],
  "allowedPostUpgradeCommands": ["go run main.go --msg \"{{{depName}}} from {{{currentVersion}}} to {{{newVersion}}}\""],
  "packageRules": [
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": ["major"],
          "minimumReleaseAge": "3 days",
          "commitMessagePrefix": "chore(deps)",
          "enabled": true
      },
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": ["minor"],
          "minimumReleaseAge": "2 days",
          "commitMessagePrefix": "chore(deps)",
          "enabled": true,
            "postUpgradeTasks": {
                "commands": ["go run main.go --msg \"{{{depName}}} from {{{currentVersion}}} to {{{newVersion}}}\""],
                "fileFilters": ["CHANGELOG.md"],
                "executionMode": "update"
       }
      },
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": ["patch"],
          "minimumReleaseAge": "2 days",
          "commitMessagePrefix": "chore(deps)",
          "enabled": true
      },
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch"],
        "automerge": true
      }
  ],
  "enabled": true
}
