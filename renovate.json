{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
    "config:recommended"
  ],
  "ignoreDeps": ["node","npm"],
      "packageRules": [
        {
            "description": "Only Update package.json",
            "matchFileNames": ["Dockerfile"],
            "enabled": true
        },
        {   
            "description": "Disable updates for dockerfiles.",
            "matchManagers": ["docker-compose", "dockerfile"],
            "enabled": true
        }
      ],
      "ignorePaths": [
              "Dockerfile"
  ]
}
