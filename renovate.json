{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
      "config:recommended"
  ],
  "enabledManagers": ["npm","gomod"],
  "commitMessageExtra": "from {{currentVersion}} to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "branchPrefix": "feature/",
  "prHourlyLimit": 5,
  "baseBranches": ["master"],
  "packageRules": [
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": ["major"],
          "minimumReleaseAge": "3 days",
          "commitMessagePrefix": "chore(deps)",
          "enabled": true
      },
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": ["minor"],
          "minimumReleaseAge": "2 days",
          "commitMessagePrefix": "chore(deps)",
          "enabled": true
      },
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": ["patch"],
          "minimumReleaseAge": "2 days",
          "commitMessagePrefix": "chore(deps)",
          "enabled": true
      },
      {
          "matchPackagePatterns": ["github.com/Masterminds/sprig"],
          "matchUpdateTypes": ["*"],
          "minimumReleaseAge": "2 days",
          "commitMessagePrefix": "chore(deps)",
          "versioning": "regex:^(?<compatibility>.*)-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
          "enabled": true
      }
  ],
  "enabled": true
}
