{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends":[
    "config:base"
  ],
  "enabledManagers":["docker, docker-compose"],
      "packageRules": [
        {
            "description": "Only Update package.json",
            "matchFileNames": ["Dockerfile"],
            "enabled": true
        },
        {   
            "description": "Disable updates for dockerfiles.",
            "matchManagers": ["docker-compose", "dockerfile"],
            "enabled": true
        }
      ]
}
